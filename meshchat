require 'rubygems'
require 'getoptlong'
require 'socket'
require 'etc'
require 'readline'

PROGRAM = 'Mesh Chat Client'
VERSION = '1.0'
ARG0 = File.basename(__FILE__)

#
# configuration class, which should be used as a singleton through the $config
# variable. no stupid faux-fancy singleton pattern class, just instantiate it
# once and dont be a tard
#

class ZConfig

	DFLSERVER = '127.0.0.1'
	DFLPORT = 30201

	attr_accessor :server
	attr_accessor :port
	attr_accessor :sock

	def initialize
		@server = DFLSERVER
		@port = DFLPORT
      @sock = nil
	end

   def startup

      # register at_exit

      Kernel.at_exit do
         puts "executing exit proceedure"
         @sock.close unless @sock.nil?
      end

      # connect socket

      @sock.close unless @sock.nil?

      begin
         @sock = TCPSocket.open($config.server, $config.port)
      rescue Exception => e
         puts "caught exception " + e.to_s 	
         exit
      end

      # register SIGINT handler

      Kernel.trap('INT') do |signo|
         Kernel.trap(signo, 'SIG_IGN')
         puts "captured interrupt, exiting"
         exit
      end

   end
end

$config = ZConfig.new

#
# command-line options definition block
#

OPTIONS = [
	[ [ '--server' , '-s', GetoptLong::REQUIRED_ARGUMENT ], :server, 'server address' ],
	[ [ '--port'   , '-p', GetoptLong::REQUIRED_ARGUMENT ], :port  , 'server port'    ],
	[ [ '--help'   , '-h', GetoptLong::NO_ARGUMENT       ], nil    , 'help'           ],
	[ [ '--version', '-V', GetoptLong::NO_ARGUMENT       ], nil    , 'version'        ]
]

#
# the usage function which prints out the usage when --help is invoked
#

def usage

	width = 20

	print "\n"
	
	version()

	print "\nusage: " + ARG0 + " [options]\n\n"

	OPTIONS.each do |option,arg,desc|

		( long, short, params ) = option
		
		str = [ long, short ].compact.join(', ') + ' '
		str += arg.to_s.upcase unless arg.nil?

		printf("\t%-*s%s", width, str, desc)
		printf(' (default: %s)', $config.send(arg)) unless arg.nil?
		print "\n"
	end

	print "\n"

end

#
# the version function which prints the client version when --version or --help is invoked
#

def version
	puts PROGRAM + ' ' + VERSION
end

#
# proccess the command-line options
#

opts = GetoptLong.new(*OPTIONS.map { |x| x.first })

opts.each do |opt,arg|
	case opt
		when '--server'
			$config.server = arg
		when '--port'
			$config.port = arg
		when '--help'
			usage()
			exit
		when '--version'
			version()
			exit
	end
end

#
# make socket connection -- this client is pretty basic
#

$config.startup

while line = Readline.readline('> ', true)
   p line
end

while line = $config.sock.gets
	puts line.chop
end

# while sockets are ready

	# if readline event
		# process readline event

	# for each network socket
		# read event
		# process event
